{
  "component": "Card",
  "props": {
    "attrs": { "data-style": "glass", "data-status": "{data.status}" },
    "padding": 16
  },
  "children": [
    {
      "component": "Row",
      "props": { "align": "center", "space": 8 },
      "children": [
        {
          "component": "Image",
          "props": { "src": "{data.logo}", "className": "brand-logo" }
        },
        {
          "component": "Text",
          "props": { "style": "title1", "text": "{i18n.order_status}" }
        },
        { "component": "Spacer" },
        {
          "component": "Text",
          "props": {
            "style": "caption",
            "text": "{i18n.order} #{data.orderNo}"
          }
        }
      ]
    },
    {
      "component": "Row",
      "props": { "align": "baseline", "space": 10 },
      "children": [
        {
          "component": "Text",
          "props": { "style": "largeTitle", "text": "{data.stateCode}" }
        },
        {
          "component": "Text",
          "props": { "style": "caption", "text": "{data.summaryDate}" }
        }
      ]
    },
    {
      "component": "Row",
      "props": { "align": "center", "space": 8 },
      "children": [
        {
          "component": "Text",
          "props": { "style": "caption", "text": "{data.priceText}" }
        },
        { "component": "Spacer" },
        {
          "component": "Text",
          "props": { "style": "caption", "text": "{data.deliveryText}" }
        }
      ]
    },
    {
      "component": "StatusIndicator",
      "props": { "status": "{data.status}" }
    }
  ]
}
