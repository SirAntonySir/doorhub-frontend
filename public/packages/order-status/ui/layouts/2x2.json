{
  "component": "Card",
  "props": {
    "style": "glass",
    "padding": 24,
    "className": "status-{data.status}"
  },
  "children": [
    {
      "component": "Row",
      "props": { "align": "center", "space": 8 },
      "children": [
        {
          "component": "Image",
          "props": { "src": "{data.logo}", "className": "brand-logo" }
        },
        {
          "component": "Text",
          "props": { "style": "caption", "text": "{i18n.order_status}" }
        },
        { "component": "Spacer" },
        {
          "component": "Text",
          "props": { "style": "caption", "text": "#{data.orderNo}" }
        }
      ]
    },
    {
      "component": "Text",
      "props": { "style": "title1", "text": "{data.stateText}" }
    },
    {
      "component": "StatusIndicator",
      "props": { "status": "{data.status}" }
    }
  ]
}
