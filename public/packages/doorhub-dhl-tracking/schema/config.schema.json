{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "WidgetConfig",
  "type": "object",
  "properties": {
    "apiKey": {
      "type": "string",
      "title": "API Key",
      "description": "Your DHL API key for authentication"
    },
    "apiSecret": {
      "type": "string",
      "title": "API Secret",
      "description": "Your DHL API secret for authentication"
    },
    "piececode": {
      "type": "string",
      "title": "Tracking Number (piececode)",
      "description": "DHL tracking number, e.g., 358864686560"
    },
    "refreshRate": {
      "type": "integer",
      "minimum": 30,
      "maximum": 3600,
      "default": 300,
      "title": "Refresh Rate (seconds)",
      "description": "How often to refresh the data"
    },
    "language": {
      "type": "string",
      "enum": ["en", "de"],
      "default": "en",
      "title": "Language",
      "description": "Display language"
    }
  },
  "required": ["apiKey", "apiSecret", "piececode"]
}
